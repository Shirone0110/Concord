<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.CreateServerController">
   <center>
      <VBox prefHeight="130.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_CENTER" text="Create new Server">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Label text="Server Name">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="newNameTextField" promptText="Enter Server Name ..." />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Label text="Private">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <RadioButton fx:id="radbtnYes" mnemonicParsing="false" text="Yes">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="radbtnNo" mnemonicParsing="false" text="No" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="20.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onClickCreate" text="Create">
               <HBox.margin>
                  <Insets left="20.0" right="50.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClickCancel" text="Cancel" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
