<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.CreateAccountController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label text="Username" />
                  <TextField id="newUsername" fx:id="userNameTextField" promptText="Enter username">
                     <HBox.margin>
                        <Insets left="22.0" />
                     </HBox.margin></TextField>
               </children>
               <VBox.margin>
                  <Insets left="20.0" top="19.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label text="Real name" />
                  <TextField id="newRealname" fx:id="realNameTextField" promptText="Enter real name">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin></TextField>
               </children>
               <VBox.margin>
                  <Insets left="20.0" top="19.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label text="Password" />
                  <TextField id="newPassword" fx:id="passwordTextField" promptText="Enter password">
                     <HBox.margin>
                        <Insets left="25.0" />
                     </HBox.margin></TextField>
               </children>
               <VBox.margin>
                  <Insets left="20.0" top="19.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button id="btnCreateAcc" mnemonicParsing="false" onAction="#onClickSubmit" text="Create Account">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button id="btnBack" mnemonicParsing="false" onAction="#onClickBack" text="Back">
                     <HBox.margin>
                        <Insets left="85.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
